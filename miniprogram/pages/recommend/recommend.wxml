<view class="chat-container">
  <view class="chat-header">{{lang.recommend_title}}</view>

  <scroll-view class="chat-box" scroll-y="true">
    <block wx:for="{{messages}}" wx:key="index">
      <view wx:if="{{item.type === 'text'}}" class="message {{item.role}}-message">
        <text>{{item.content}}</text>
      </view>

      <view wx:elif="{{item.type === 'dish'}}" class="bot-message message dish-card">
        <image src="{{item.image}}" class="dish-img" mode="aspectFill" />
        <view class="dish-info">
          <text class="dish-name">{{item.name}}</text>
        </view>
      </view>
    </block>
  </scroll-view>

  <view class="chat-input">
    <input 
  placeholder="{{lang.recommend_input_placeholder}}" 
  value="{{userInput}}" 
  bindinput="onInputChange" 
/>
<button bindtap="onSend">{{lang.recommend_send_button}}</button>
  </view>
</view>
