/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #f9f9f9;
}

/* 顶部搜索栏 */
.top-bar {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  width: 100%;
}

.search-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  border: 1px solid #a31f34;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.search-button,
.model-recommend-button {
  height: 64rpx;
  padding: 0 24rpx;
  margin-left: 12rpx;
  border-radius: 12rpx;
  border: 1px solid #a31f34;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-button {
  background-color: #a31f34;
  color: #fff;
}

.model-recommend-button {
  background-color: #ffecec;
  color: #a31f34;
  font-weight: bold;
  border-style: dashed;
}

/* 排序与筛选栏 */
.menu-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.picker-item {
  padding: 16rpx 24rpx;
  background-color: #fff;
  border: 1px solid #a31f34;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #a31f34;
}

/* 菜品列表 */
.menu-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

/* 菜品卡片 */
.dish-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  box-sizing: border-box;
  max-width: 100%;
  overflow: hidden;
}

/* 图片 + 文本区 */
.dish-info {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}

.menu-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
  background-color: #f2f2f2;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  max-width: calc(100% - 220rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

/* 菜品名称 */
.menu-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

/* 星级与评分 */
.rating-and-number {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.menu-rating text {
  font-size: 26rpx;
}

.star-rated {
  color: #ffc107;
}

.star-unrated {
  color: #ccc;
}

.original-rating {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 价格 */
.menu-price {
  font-size: 28rpx;
  color: #e91e63;
  margin: 8rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

/* 简介描述 */
.menu-description {
  font-size: 24rpx;
  color: #777;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

/* 操作按钮（评分） */
.dish-bottom {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.button-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

/* 评分按钮 */
.rating-button {
  background-color: #a31f34;
  color: white;
  font-size: 24rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  border: none;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
