/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #f9f9f9;
}

/* 搜索栏 */
.top-bar {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  width: 100%;
}

.search-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  border: 1px solid #a31f34;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.search-button,
.model-recommend-button {
  height: 64rpx;
  padding: 0 24rpx;
  margin-left: 12rpx;
  background-color: #a31f34;
  color: white;
  font-size: 26rpx;
  border-radius: 12rpx;
}

/* 菜单栏 */
.menu-bar {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  gap: 20rpx;
}

.picker-item,
.filter-entry {
  font-size: 28rpx;
  font-weight: bold;
  color: #a31f34;
  padding: 14rpx 24rpx;
  background-color: #fff3f3;
  border: 2rpx solid #a31f34;
  border-radius: 12rpx;
}

/* 菜品列表 */
.menu-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.dish-card {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  padding-bottom: 20rpx;
}

/* 图片与信息 */
.dish-info {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.menu-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #eee;
}

.menu-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.rating-and-number {
  display: flex;
  align-items: center;
}

.menu-rating {
  font-size: 28rpx;
  color: #f5a623;
}

.star-rated {
  color: #f5a623;
}

.star-unrated {
  color: #ccc;
}

.original-rating {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.menu-price {
  font-size: 28rpx;
  color: #d81e06;
}

.menu-description {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 标签 + 评分按钮一行 */
.dish-bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding-left: 20rpx;
  flex: 1;
}

.dish-tag {
  padding: 6rpx 16rpx;
  background-color: #eee;
  border-radius: 16rpx;
  font-size: 28rpx; /* 放大标签字体 */
  color: #333;
}

.dish-tag.location {
  background-color: #ffd9d9;
  color: #a31f34;
}

.rating-button {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  font-size: 24rpx; /* 缩小评分按钮 */
  background-color: #a31f34;
  color: white;
  border-radius: 16rpx;
}

/* 弹出筛选层 */
.popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.filter-popup {
  width: 90%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #444;
}

.popup-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.popup-buttons button {
  flex: 1;
  margin: 0 10rpx;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-radius: 12rpx;
  background-color: #a31f34;
  color: white;
}
