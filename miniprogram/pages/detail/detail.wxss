.container {
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dish-image {
  width: 100%;
  margin-bottom: 20px;
}

.dish-name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.dish-rating {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.star-image {
  width: 30px;
  height: 30px;
  margin-right: 5px;
}

/* ‚≠ê Êñ∞Â¢ûÔºöÁî®‰∫éÂ∏ÉÂ±Ä‰∫îÈ¢óÊòüÂ±ïÁ§∫ */
.star-group {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.star {
  width: 48rpx;
  height: 48rpx;
}

