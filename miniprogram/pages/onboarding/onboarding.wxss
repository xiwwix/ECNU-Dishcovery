/* 页面容器 */
.container {
  padding: 32rpx;
  background-color: #fdfdfd;
}

/* 主标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  text-align: center;
}

/* 小节提示文字 */
.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
  text-align: left;
}

/* 问卷每一部分容器 */
.section {
  margin-bottom: 60rpx;
}

/* 每项容器：不限制内容宽度 */
.item {
  margin-bottom: 40rpx;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #eee;
  width: 100%;
}

/* 标签文字 */
.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #444;
  margin-bottom: 16rpx;
  text-align: left;
}

/* slider 撑满宽度 + 居中显示 + 适配不同屏幕 */
slider {
  width: 100%;
  max-width: 94vw;
  min-width: 680rpx;
  margin: 0 auto;
  display: block;
  background-color: transparent;
}

/* 提交按钮区域 */
.submit-wrapper {
  margin-top: 60rpx;
  text-align: center;
}

/* 多选项样式（备用） */
.checkbox-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}
