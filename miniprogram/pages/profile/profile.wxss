.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /* 保证按钮与头像文字对齐 */
}

.actions button {
  width: 92vw;                  /* 使用视口宽度确保在各设备上自动适配 */
  max-width: 600rpx;            /* 限制最大宽度，防止过宽 */
  height: 88rpx;
  line-height: 88rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  border-radius: 16rpx;
  background-color: #a31f34;
  color: #fff;
  font-weight: 500;
  text-align: center;
}
